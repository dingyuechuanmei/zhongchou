@import "../common.wxss";
button{
  font-size:11pt;
  font-family:inherit;
}
page {
    height: 100%;
    font-family: '微软雅黑',Helvetica,sans-serif;
    background: #f4f4f4;
    font-size:30rpx;
}
.border_solid {
  margin-top:20rpx;
  border-top: 1px solid #d9d9d9;
  border-bottom:1px solid #d9d9d9;
  background: white;
}
.header{
  height: 100rpx;
  line-height:100rpx;
  padding: 10rpx 20rpx;
}
.header .logo{
  float: left;
}
.header .logoimg{
  float: right;
  border-radius: 50%;
}
.background .logoimg{
  border-radius: 0;
}
.content .name{
  padding:20rpx;
  line-height:60rpx;
  border-bottom: 1px solid #d9d9d9;
}
.content .name view{
  height: 60rpx;
  display: inline-block;
  vertical-align: top;
}
.content .name .right{
  margin-left: 28rpx;
  margin-top: 6rpx;
}
.content .desc{
  padding:20rpx;
  height: 150rpx;
}
.content .desc view{
  display: inline-block;
  vertical-align: top;
}
.content .desc .desc_right{
  width: 550rpx;
  margin-left: 20rpx;
  margin-top: -12rpx;
}
.content .desc .desc_right textarea{
  height: 150rpx;
}
.footer{
  padding:20rpx;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  align-items:center;
}
.footer .left{
  display: inline-block;
  flex: 1;
}
.footer .right{
  display: inline-block;
  text-align: right;
}
.save{
  margin: 30rpx 20rpx;
}