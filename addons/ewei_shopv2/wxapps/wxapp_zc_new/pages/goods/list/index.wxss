.clear_af::after {
  content: "";
  display: block;
  clear: both;
}
.contanter {
  position: absolute;
  top: 0px;
  right: 0;
  left: 0;
  bottom: 0;
  overflow-y: auto;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
}
.top_nav {
  width: 100%;
  height: 80rpx;
  box-shadow: 0px 0rpx 20rpx #ddd;
  position: relative;
  z-index: 99; 
}
.topWrap{height:80rpx; width:100%; display: flex; display: -webkit-box; flex-direction: column;} 
.top_Item{ padding: 0 30rpx; height:80rpx;  flex: 1;} 
.top_nav .top_Item:nth-child(1) {
  padding-left: 20rpx;
}
.top_nav .top_Item view {
  display: inline-block;
  line-height: 80rpx;
  box-sizing: border-box;
  position: relative;
}  
.top_nav .top_Item view::after {
  content: "";
  display: block;
  position: absolute;
  top: auto;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: transparent;
}
.top_nav .top_Item view.on {
  color: #0fc101; 
}
.top_nav .top_Item view.on::after {
  background: #0fc101; 
}
.content {
  position: absolute;
  left: 0;
  top: 90rpx;
  right: 0;
  bottom: 50px;
}
.left_nav {
  display: inline-block;
  vertical-align: top;
  height: 100%;
  background:#eee;
}
.left_nav .topWrap{height:100%; width: 160rpx; display: flex; display: -webkit-box; flex-direction: row-reverse;} 
.left_nav .top_Item { 
  width: 160rpx; height:94rpx; line-height: 94rpx; text-align: center;  flex: 1; padding: 0;
  border-bottom: 2rpx solid #ddd;  
} 
.left_nav .top_Item view {
  box-sizing: border-box;
  background: #eee;
  color: #777;
}
.left_nav .top_Item view.on {
  background: #fff;
  color: #0fc101;
}

.goods {
  width: 590rpx;
  height: 100%;
  display: inline-block;
  vertical-align: top;
  box-sizing: border-box;
  padding-left: 20rpx;
  overflow-y: auto;
}
.goods .item {
  padding: 20rpx;
  padding-left: 0;
  border-bottom: 2rpx solid #ddd;
  position: relative;
}
.goods .item image {
  width: 144rpx;
  height: 144rpx;
  vertical-align: top;
}
.goods .item .info {
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
}
.goods .item .info .name {
  font-size: 32rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.goods .item .info .price {
  margin-top: 22rpx;
  font-size: 28rpx;
  color: #777;
  height: 42rpx;
  line-height: 42rpx;
}
.goods .item .info .price text {
  display: inline-block;
}
.goods .item .info .price .down {
  background: red;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  color: #fff;
  border-radius: 4rpx;
}
.goods .item .info .price .unit {

}
.goods .item .info .price .xpri {
  font-size: 32rpx;
  color: red;
}
.goods .item .info .price .opri {
  position: relative;
}
.goods .item .info .price .opri::after {
  content: "";
  display: block;
  width: 100%;
  height: 2rpx;
  background: #777;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -1rpx;
}

.my-add-btn {
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  box-sizing: border-box;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  position: absolute;
  left: auto;
  right: 20rpx;
  top: 50%;
  margin-top: -30rpx;
}
.my-add-btn text {
  display: inline-block;
  width: 30rpx;
  height: 4rpx;
  background: #0fc101;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -2rpx;
  margin-left: -15rpx;
}
.my-add-btn text:nth-child(2){
  width: 4rpx;
  height: 30rpx;
  margin-top: -15rpx;
  margin-left: -2rpx;
}

