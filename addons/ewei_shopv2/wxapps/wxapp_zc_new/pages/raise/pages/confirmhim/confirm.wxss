@import "../../resource/css/app.wxss";

page {
  background: #f2f2f2;
}
.pinput {
  color: #999;
}
.item {
  height: 110rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  position: relative;
}
.item input {
  display: inline-block;
  vertical-align: top;
  height: 110rpx;
  line-height: 110rpx;
  margin-left: 30rpx;
  width: 80%;
}
.item image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin-top: 35rpx;
}
.item:nth-child(3) {
  margin-top: 20rpx;
  position: relative;
}
.section {
  height: 110rpx;
  line-height: 110rpx;
}
.section .picker view {
  display: inline-block;
  margin-right: 30rpx;
}
.item:nth-child(3) .you {
  position: absolute;
  left: auto;
  right: 30rpx;
  top: 46rpx;
}
.textareabox {
  padding: 30rpx;
  background: #fff;
}
.textareabox textarea {
  width: 100%;
  height: 200rpx;
}
.bottom {
  margin-top: 60rpx;
  padding: 0 30rpx;
}
.bottom .btn {
  background: #ff6749;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}
