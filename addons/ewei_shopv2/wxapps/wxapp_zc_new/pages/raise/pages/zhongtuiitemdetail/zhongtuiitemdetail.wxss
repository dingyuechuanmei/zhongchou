@import "../../resource/css/app.wxss";

page {
  background: #f2f2f2;
}
.zhongtuiitemdetail .zhongtui_item {
  margin-bottom: 120rpx;
}
.zhongtuiitemdetail .zhongtui_item .posterimg {
  position: relative;
}
.zhongtuiitemdetail .zhongtui_item .posterimg::after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .4);
  position: absolute;
  left: 0;
  top: 0;
}
.zhongtuiitemdetail .zhongtui_item .posterimg image {
  width: 100%;
}
.zhongtuiitemdetail .zhongtui_item .video {
  position: relative;
}
.zhongtuiitemdetail .zhongtui_item .video .title {
  position: absolute;
  left: 30rpx;
  top: auto;
  bottom: 30rpx;
  z-index: 99;
  color: #fff;
}
.zhongtuiitemdetail .zhongtui_item .title {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 32rpx;
  position: relative;
  background: #fff;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.zhongtuiitemdetail .zhongtui_item .author {
  width: 100%;
  height: 110rpx;
  position: relative;  
  background: #fff;
}
.zhongtuiitemdetail .zhongtui_item .author image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #eee;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.zhongtuiitemdetail .zhongtui_item .author .name {
  display: inline-block;
  height: 100%;
  line-height: 110rpx;
  margin-left: 20rpx;
  vertical-align: top;
}
.zhongtuiitemdetail .zhongtui_item .author .time {
  float: right;
  height: 100%;
  line-height: 110rpx;
  margin-right: 30rpx;
}
.zhongtuiitemdetail .zhongtui_item .content {
  margin-top: 20rpx;
  background: #fff;
  padding:20rpx 30rpx;
}
.zhongtuiitemdetail .support {
  position: fixed;
  left: 0;
  top: auto;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top:2rpx solid #f0f0f0;
}
.zhongtuiitemdetail .support image {
  width: 34rpx;
  height: 34rpx;
  vertical-align: top;
  margin-top: 33rpx;
}
.zhongtuiitemdetail .support .text {
  display: inline-block;
  font-size: 32rpx;
  vertical-align: top;
  margin-top: 26rpx;
  margin-left: 20rpx;
}
.zhongtuiitemdetail .support::after {
  content: "";
  display: block;
  width: 4rpx;
  height: 46rpx;
  background: #f0f0f0;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -1rpx;
  margin-top: -23rpx;
}
