 .top {
  position: fixed;
  top: 0;
  left: 0; 
  width: 100%; 
  padding: 0 30rpx;
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
  box-sizing: border-box;
  z-index: 9999;

} 
.topWrap{height:160rpx; width:100%; display: flex; display: -webkit-box; flex-direction: column;}  
.top_Item{ width: 160rpx; height: 160rpx;  flex: 1;}  
.top_Item view {
  display: inline-block;
  box-sizing: border-box;
  position: relative;
}
.top_Item view.on {
  color: #ff6749;
}
.top_Item view.on::after {
  content: "";
  display: block;
  width: 100%;
  height: 6rpx;
  background: #ff6749;
  position: absolute;
  left: 0;
  top: auto;
  bottom: 0;
  z-index: 999; 
}


