@import "../components/components.wxss";
@import "../../resource/css/app.wxss";

.index .bigimage {
  width: 100%;
  height: 400rpx;
  display: block;
  vertical-align: top;
}
.index .bigtitle {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.index .bigtitle .item {
  position: relative;
  padding: 20rpx 0;
}
.index .bigtitle .item::after {
  content: "";
  display: block;
  position: absolute;
  left: auto;
  right: 0;
  top: 0;
  width: 4rpx;
  height: 210rpx;
  background: #f2f2f2;
}

.index .bigtitle .image {
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
  vertical-align: top;
}
.index .bigtitle .image image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  vertical-align: top;
}
.index .bigtitle .item .text {
  margin-top: 8rpx;
}
.index .bigtitle .item .text view {
  width: 90%;
  margin: 0 auto;
  word-spacing: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index .bigtitle .text button{
  margin: 0px;
  padding: 0px;
  border: none;
  line-height: 1.5;
  background-color:#fff;
}
.index .bigtitle .text button:nth-child(1) {
  font-size: 24rpx;
}
.index .bigtitle .text button:nth-child(2) {
  color: #999;
  font-size: 22rpx;
}
.index .introducetheraise {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 30rpx;
  /* padding-bottom: 120rpx; */
}
.index .introducetheraise .title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}
.index .introducetheraise .video {
  position: relative;
  z-index: 1;
}
.videostyle,.index .introducetheraise .video #myVideo {
  vertical-align: top;
  width: 100%;
  height: 400rpx;
  /* position: absolute;
  z-index: 9999;  */
}
.index .introducetheraise .info {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #999;
  font-size:26rpx;
}




