@import "../../resource/css/app.wxss";

.scroll_img {
  background: #fff;
  padding: 0 30rpx 40rpx 30rpx;
}
.topWrap{height:160rpx; width:100%; display: flex; display: -webkit-box; flex-direction: column;}  
.top_Item{ width: 170rpx; height: 170rpx;  flex: 1; margin-right: 20rpx;}  
.top_Item image {
  display: inline-block;
  width: 170rpx; height: 170rpx;
}

.person {
  width: 100%;
  height: 110rpx;
  background: #fff;
}
.person image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 30rpx;
}
.person .name {
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
  line-height: 110rpx;
}
.person .time {
  float: right;
  margin-right: 30rpx;
  height: 110px;
  line-height: 110rpx;
  color: #999;
  font-size: 24rpx;
}
.bigtitle {
  font-size: 32rpx;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  background: #fff;
}
.progressbox {
  padding: 30rpx;
  background: #fff;
}
.progressbox .progress {
  background: #fff5ef;
  border-radius: 10rpx;
}
.progressbox .progress .div_3 {
  position: relative;
}
.progressbox .progress .div_3 .item {

}
.progressbox .progress .div_3 .item:nth-child(3) {
  position: absolute;
  left: auto;
  right: 0;
  top: 0;
}
.progressbox .progress .div_3 .item {
  padding-top: 40rpx;
}
.progressbox .progress .div_3 .item .num {
  margin-top: 30rpx;
  color: #ff6749;
}
.progressbox .progress .progressline {
  padding: 30rpx;
  padding-bottom: 40rpx;
} 
.progressbox .progress .progressline progress {
  width: 100%;
}

.zhongchouitemdetail .program_detail {
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}
.zhongchouitemdetail .program_detail .title {
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 30rpx;
  position: relative;
}
.zhongchouitemdetail .program_detail .text {
  padding: 30rpx;
  padding-bottom: 0;
  overflow: hidden;
}
.zhongchouitemdetail .afull {
  height: 100rpx;
  line-height: 100rpx;
  color: #ff6749;
  background: #fff;
  text-align: center;
}
.zhongchouitemdetail .confirmhim {
  margin-top: 20rpx;
  background: #fff;
}
.zhongchouitemdetail .confirmhim .title {
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 30rpx;
  position: relative;
}
.zhongchouitemdetail .confirmhim .user {
  position: relative;
}
.zhongchouitemdetail .confirmhim .user .imglist {
  padding-top: 30rpx;
}
.zhongchouitemdetail .confirmhim .user .imglist image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #eee;
  margin-left: 30rpx;
}
.zhongchouitemdetail .confirmhim .user .you {
  position: absolute;
  left: auto;
  right: 36rpx;
  top: 56rpx;
}
.zhongchouitemdetail .confirmhim .user .youbox {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  left: auto;
  right: 0;
  top: 0;
}
.zhongchouitemdetail .confirmhim .user .text {
  padding: 30rpx;
  padding-top: 20rpx;
}
.zhongchouitemdetail .confirmhim .user .text view {
  background: #f2f2f2;
  padding: 30rpx 20rpx;
  border-radius: 10rpx;
}
.zhongchouitemdetail .helphim {
  margin-top: 20rpx;
  background: #fff;
}
.zhongchouitemdetail .helphim .title {
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 30rpx;
  position: relative;
}
.zhongchouitemdetail .helphim .list {
  padding-bottom: 120rpx;
}
.zhongchouitemdetail .helphim .item {
  padding: 30rpx;
  padding-top: 0;
}
.zhongchouitemdetail .helphim .item view:nth-child(1) {
}
.zhongchouitemdetail .helphim .item view:nth-child(1) image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #eee;
  vertical-align: top;
  margin-top: 20rpx;
}
.zhongchouitemdetail .helphim .item view:nth-child(1) .name {
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  height: 110rpx;
  line-height: 110rpx;
  vertical-align: top;
}
.zhongchouitemdetail .helphim .item view:nth-child(1) .price {
  display: inline-block;
  font-size: 26rpx;
  height: 110rpx;
  line-height: 110rpx;
  vertical-align: top;
}
.zhongchouitemdetail .helphim .item view:nth-child(1) .time {
  float: right;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 26rpx;
  color: #999;
}
.zhongchouitemdetail .helphim .item > view:nth-child(2) {
  background: #f2f2f2;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  position: relative;
} 
.zhongchouitemdetail .helphim .item > view:nth-child(2)::after {
  content: "";
  display: block;
  width: 100%;
  height: 2rpx;
  background: #f0f0f0;
  position: absolute;
  left: 0;
  top: auto;
  bottom: -30rpx;
}
.zhongchouitemdetail .confirm {
  position: fixed;
  left: 0;
  top: auto;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #ff6749;
}