.clear::after {
  content: "";
  display: block;
  clear: both;
}

.comment_list {
  background: #fff;
  font-size: 14px;
}
.comment_list .comment_item {
  padding: 10px 15px;
  border-bottom: 1px solid #f0f0f0;
}
.comment_list  .avater {
  display: inline-block;
  padding: .1px;
   margin-bottom: 5px; 
}
.comment_list  .avater image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  vertical-align: top;
}
.comment_list  .avater .username_time {
  height: 40px;
  display: inline-block;
  margin-left: 10px;
  vertical-align: top;
  margin-top: -3px;
}
.comment_list  .avater .username {
  font-size: 16px;
}
.comment_list  .avater .time {
  font-size: 12px;
  color: #666;
}
.comment_list .comment_detail{
  text-align:justify; text-justify:inter-ideograph;
}


.collect_list {
  background: #fff;
  font-size: 14px;
}
.collect_list .collect_item {
  padding: 10px 0;
  position: relative;  
  border-bottom: 1px solid #f0f0f0;
}
.collect_list image {
  width: 80px;
  height: 80px;
  float: left;
  margin-left: 15px;
}
.collect_list .text {
  float: left;
  width: 100%;
  font-size: 15px;
  height: 80px;
  text-align:justify; text-justify:inter-ideograph; 
  position: absolute; 
  padding-left: 105px;
  padding-right: 15px;
}
.collect_list .text .title {
  font-size: 15px;
  height: 30px;
  overflow: hidden; white-space: nowrap; text-overflow: ellipsis;
}
.collect_list .text .content {
  height: 50px;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.comment_bar {
  padding: 0 30rpx;
  padding-right: 0;
  background: #eee;
  width: 100%;
  position: fixed;
  top: auto;
  bottom: 0;
  left: 0;
}
.comment_bar input {
  width: 600rpx;
  height: 80rpx;
  float: left;
  border-radius: 8rpx;
  margin: 20rpx 0;
  border: 2rpx solid rgba(0, 0, 0, .1);
  background: #fff;
}
.comment_bar text {
  float: right;
  margin-right: 30rpx;
  margin-top: 30rpx;
  padding: 4rpx 0;
}

.collect_star {
  display: inline-block;
  font-size: 40rpx;
  position: absolute;
  top: 30rpx;
  left: auto;
  right: 30rpx;
  color: rgba(75,180,50,.2);
}
.collect_star .on {
  color: rgba(75,180,50,.8);
}