@import "../../resource/css/app.wxss";

page {
  background: #f2f2f2;
}
.personalinformation {
  display: none;
}
.personalinformation.on {
  display: block;
}
.personalinformation .item {
  width: 100%;
  height: 110rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f0f0f0;
  background: #fff;
  padding: 0 30rpx;
}
.personalinformation .item .title {
  display: inline-block;
  line-height: 110rpx;
}
.personalinformation .item .r {
  height: 100%;
}
.personalinformation .item .r image.avater {
  width: 70rpx;
  height: 70rpx;
  vertical-align: top;
  margin-top: 20rpx;
  border-radius: 50%;
}
.personalinformation .item .r image.youimage {
  width: 16.6rpx;
  height: 30rpx;
  vertical-align: top;
  margin-top: 40rpx;
  margin-left: 20rpx;
}
.personalinformation .item .r .text {
  display: inline-block;
  line-height: 110rpx;
}

.idx2 {
  margin-top: 20rpx;
  display: none;
}
.idx2.on {
  display: block;
}
.idx2 .inputbox {
  position: relative;
  width: 100%;
  height: 110rpx;
  background: #fff;
}
.idx2 .inputbox input {
  height: 100%;
  line-height: 110rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.idx2 .inputbox .x {
  position: absolute;
  left: auto;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  z-index: 99;
  border-radius: 50%;
  margin-top: 35rpx;
  margin-right: 30rpx;
}
.idx2 .save {
  margin-top: 60rpx;
  padding: 0 30rpx;
}
.idx2 .save view {
  background: #ff6749;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}

