@import "../../resource/css/app.wxss";

.bottombar {
  position: fixed;
  left: 0;
  top: auto;
  bottom: 0;
  z-index: 99999;
  width: 100%;
  height: 100rpx;
  text-align: center;
  background: #fff;
  padding: 0 30rpx;
  color: #666;
  font-size: 24rpx;
}
.bottombar .div_2_box {
  width: 690rpx;
}
.bottombar .item.on {
  color: #FF6749;
}
.bottombar::before {
  content: "";
  display: block;
  width: 100%;
  height: 2rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: #f0f0f0;
}
.bottombar .imgbox {
  width: 58rpx;
  height: 58rpx;
  display: inline-block;
  padding: .1rpx;
}
.bottombar .imgbox image {
  width: 100%;
  height: 100%; 
  vertical-align: top;
  margin-top: 6rpx;
}

/*轮播图  */
swiper {
  width: 100%;
  height: 400rpx;
}
swiper .slide-image {
  width: 100%;
  height: 100%;
}

/*动态列表  */
.dynamic-list {background: #fff; margin-top: 20rpx;}
.dynamic-list > .item { border-bottom: 1px solid #f0f0f0; padding-top: 20rpx;}
.dynamic-list > .item .info {padding:0 30rpx;}
.dynamic-list > .item .info image {width: 72rpx; height: 72rpx; border-radius: 50%;}
.dynamic-list > .item .info text {display: inline-block; line-height: 72rpx;margin-left: 30rpx;}
.dynamic-list > .item .info .r {line-height: 72rpx; color: #db384b;}
.dynamic-list > .item .title {font-size: 36rpx; line-height: 100rpx;padding: 0 30rpx;}
.dynamic-list > .item .img-list {box-sizing: border-box; padding-left: 15rpx;}
.dynamic-list > .item .img-list image {width: 220rpx; height: 230rpx; margin-left: 15rpx; margin-bottom: 10rpx;}
.dynamic-list > .item .browse-comment {padding-right: 30rpx; margin-top: 20rpx; margin-bottom: 20rpx; color: #777;}
.dynamic-list > .item .browse-comment image {width: 35rpx; height: 35rpx; margin-left: 30rpx;}
.dynamic-list > .item .browse-comment text {display: inline-block; line-height: 35rpx;font-size: 24rpx; margin-left: 5rpx;}
.dynamic-list > .item .browse-comment .r {line-height: 35rpx;}
.dynamic-list .wu {background: #fff; padding-top: 50rpx; text-align: center; color: #999; display: none;}


